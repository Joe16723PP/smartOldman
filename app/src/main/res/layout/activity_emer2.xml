<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Emer2Activity">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:id="@+id/cv_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:padding="5dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header_emergency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_title"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/colorOrange"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="230dp"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="เบอร์ฉุกเฉิน"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/emer_1669"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/front_color"
                            android:background="@color/colorAccent"
                            android:layout_width="40dp"
                            android:elevation="20dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:paddingLeft="20dp"
                            android:weightSum="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:text="เบอร์ 1669"
                                android:id="@+id/header"
                                android:textSize="21sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <ImageView
                                android:layout_weight="1"
                                android:src="@drawable/medical_kit"
                                android:layout_margin="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/emer_191"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/front_color_191"
                            android:background="@color/blue"
                            android:layout_width="40dp"
                            android:elevation="20dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:paddingLeft="20dp"
                            android:weightSum="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:text="เบอร์ 191"
                                android:textSize="21sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <ImageView
                                android:layout_weight="1"
                                android:src="@drawable/police_cap"
                                android:layout_margin="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/emer_199"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/front_color_199"
                            android:background="@color/colorOrange"
                            android:layout_width="40dp"
                            android:elevation="20dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:paddingLeft="20dp"
                            android:weightSum="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:text="เบอร์ 199"
                                android:textSize="21sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <ImageView
                                android:layout_weight="1"
                                android:src="@drawable/fire"
                                android:layout_margin="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_gravity="center"
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/back_string"
                        android:textSize="18dp"
                        android:layout_margin="5dp"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_sick1"/>
                    <Button
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:id="@+id/btn_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/next_string"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_sick2"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>